---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import Project from "../components/Project.astro";

const projects = await getCollection("projects");
---

<Layout>
  <div class="px-3 flex flex-col items-center">
    <div class="lg:max-w-[60ch]">
      <section class="text-center mb-6">
        <h1 class="font-serif font-semibold text-2xl mb-4">
          Independent Creative company specializing in the fields of design,
          brand and digital experiences.
        </h1>

        <h2 class="font-sans">
          Brooklyn Creative is the independent studio practice of Nicole
          Formica. Her approach combines creative strategy with aesthetic
          expertise to craft beautiful, user-focused products and authentic
          brand experiences.
        </h2>
      </section>

      <hr class="w-full bg-slate-700 mb-6" />

      <section class="grid grid-cols-1 lg:grid-cols-2 gap-5">
        {
          projects.map((project) => (
            <Project
              title={project.data.title}
              description={project.data.description}
              image={project.data.image}
            />
          ))
        }
      </section>
    </div>
  </div>
</Layout>

---
import { Image } from "astro:assets";

interface Props {
  image: {
    src: string;
    width: number;
    height: number;
    format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif";
  };
  title: string;
  description: string;
}

const { image, title, description } = Astro.props;
---

<article>
  <Image src={image} alt="" />
  <h2 class="font-semibold">{title}</h2>
  <p>{description}</p>
</article>
